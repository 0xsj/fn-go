# Create this file in the project root
# .env.example

# Common Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_USER=appuser
DB_PASSWORD=apppassword
DB_CONN_MAX_LIFETIME=300
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5

# NATS Configuration
NATS_URL=nats://nats:4222
NATS_REQUEST_TIMEOUT=5s

# Service Specific - Auth Service
AUTH_SERVICE_PORT=8080
AUTH_SERVICE_JWT_SECRET=your-secret-key
AUTH_SERVICE_TOKEN_EXPIRY=24h
AUTH_SERVICE_REFRESH_TOKEN_EXPIRY=7d

# Service Specific - User Service
USER_SERVICE_PORT=8080

# Service Specific - Entity Service
ENTITY_SERVICE_PORT=8080

# Service Specific - Incident Service
INCIDENT_SERVICE_PORT=8080

# Service Specific - Location Service
LOCATION_SERVICE_PORT=8080

# Service Specific - Notification Service
NOTIFICATION_SERVICE_PORT=8080
NOTIFICATION_SMTP_HOST=smtp.example.com
NOTIFICATION_SMTP_PORT=587
NOTIFICATION_SMTP_USER=user
NOTIFICATION_SMTP_PASSWORD=password
NOTIFICATION_FROM_EMAIL=notifications@example.com

# Service Specific - Chat Service
CHAT_SERVICE_PORT=8080

# Service Specific - Monitoring Service
MONITORING_SERVICE_PORT=8080

# Gateway Configuration
GATEWAY_PORT=8080
GATEWAY_CORS_ALLOWED_ORIGINS=*
GATEWAY_RATE_LIMIT=100